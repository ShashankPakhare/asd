<%- include('header')%>
  <main>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 px-0 d-none d-sm-block" >
            <img src="/assets/images/signup_70.jpg" alt="login image" class="login-img" style="height: 100vh;">
          </div>
        <div class="col-sm-6 login-section-wrapper" >
          <div class="brand-wrapper">
            <h1>SSYH</h1>
          </div>
          <div class="login-wrapper my-auto">
              
            <h1 class="login-title">Sign up</h1>
            <%if(msg !=''){%>
                <%=msg%>
                <%}%>
            <form action="/signup" method="post">
              <div class="form-group">
                <label for="Name">name</label>
                  <input type="text" class="form-control" id="Name" aria-describedby="emailHelp" placeholder="Name" name="name">
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" type="email" id="email" class="form-control" placeholder="email@example.com" name="email">
              </div>
              <div class="form-group mb-4">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword" name="password">
              </div>
              <div class="form-group mb-4">
                <label for="password">Conform Password</label>
                <input type="password" id="conform password" class="form-control" placeholder="conform your passsword" name="conformpass">
              </div>
              <input name="login" id="login" type="submit" class="btn btn-block login-btn" type="button" value="Sign UP">
            </form>
            <p class="login-wrapper-footer-text">Alredy have account? <a href="/login" class="text-reset">Login here</a></p>
          </div>
        </div>
        
      </div>
    </div>
  </main>
  <%- include('footer')%>
